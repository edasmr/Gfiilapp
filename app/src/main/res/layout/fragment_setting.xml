<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/arkaplan3"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ExtraText">
    tools:context=".presentation.home.SettingFragment">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AYARLAR"
                android:fontFamily="sans-serif-black"
                android:background="@color/orange"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profilePic"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="130dp"
                >
                <ImageView
                    android:src="@drawable/person"
                    android:id="@+id/profil_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="ŞEHİR:"
                android:textColor="@color/orange"
                android:textSize="17dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/sehir"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#2D000000"
                android:background="@drawable/round_button"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints,RtlCompat"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="YAŞ :"
                android:textSize="17dp"
                android:textColor="@color/orange"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="40dp"
                tools:text="24"
                android:id="@+id/yas"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_button"
                android:textSize="18dp"
                android:backgroundTint="#2D000000"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints,RtlCompat"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="MESLEK:"
                android:textSize="17dp"
                android:textColor="@color/orange"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="40dp"
                tools:text="Kadın"
                android:id="@+id/meslek"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_button"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:backgroundTint="#2D000000"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints,RtlCompat"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="INSTAGRAM ADRES:"
                android:textSize="17dp"
                android:textColor="@color/orange"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:id="@+id/instagram"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_button"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:backgroundTint="#2D000000"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints,RtlCompat"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="SÖZLEŞME GÖNDERİMİ İÇİN AÇIK ADRES BİLGİSİ (*) :"
                android:textColor="@color/orange"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/adres"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#2D000000"
                android:background="@drawable/round_button"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints,RtlCompat"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="YENİ GÖREV EKLENDİĞİNDE SMS  ALINSIN MI ?"
                android:textColor="@color/orange"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/smsBildirimi"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#2D000000"
                android:background="@drawable/round_button"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints,RtlCompat"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="112dp"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KAYDET"
                android:id="@+id/kaydet"
                android:textColor="@color/orange"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>